{
	"pluginAlias": "homebridge-homeqtt-alarm",
	"pluginType": "accessory",
	"singular": true,
	"headerDisplay": "MQTT must be installed on your system",
	"footerDisplay": "For help please see the [Readme](https://github.com/nzbullet/homebridge-homeqtt-alarm/blob/master/README.md).",
	"schema": {
		"name": {
			"title": "Name",
			"type": "string",
			"default": "Homeqtt",
			"required": true
		},
		"accessory": {
			"title": "Accessory",
			"type": "string",
			"default": "homebridge-homeqtt-alarm",
			"required": true
		},
		"debug": {
			"title": "Additional Logging?",
			"type": "boolean",
			"default": true,
			"description": "Additional logging (seriously... all of the logging)"
		},
		"mqttConfig": {
			"title": "MQTT Config",
			"type": "object",
			"properties": {
				"url": {
					"title": "MQTT Broker URL:Port",
					"type": "string",
					"placeholder": "e.g. mqtt://192.168.1.xxx:1883",
					"required": true
				},
				"username": {
					"title": "MQTT Username",
					"type": "string",
					"placeholder": "Your MQTT Broker username (optional)"
				},
				"password": {
					"title": "MQTT Password",
					"type": "string",
					"placeholder": "Your MQTT Broker password (optional)"
				}
			}
		},
		"alarmTopics": {
			"title": "MQTT Alarm Topics",
			"type": "object",
			"properties": {
				"messageTopic": {
					"title": "MQTT Message Topic",
					"type": "string",
					"description": "Topic used to check for message activity (i.e. sensors and keyfob button presses)",
					"required": true,
					"placeholder": "e.g. tele/rfbridge/RESULT"
				},
				"setTargetStateTopic": {
					"title": "Set Target State Topic",
					"type": "string",
					"description": "Topic published when the target alarm state is changed in HomeKit.",
					"required": true,
					"placeholder": "e.g. alarm/target"
				},
				"getCurrentStateTopic": {
					"title": "Get Current State Topic",
					"type": "string",
					"description": "Topic published to notify HomeKit of the current or triggered alarm state.",
					"required": true,
					"placeholder": "e.g. alarm/current"
				}
			}
		},
		"alarmSettings": {
			"title": "Enabled Alarm States in Home",
			"type": "object",
			"properties": {
				"targetStates": {
					"title": "Target States (Enable/Disable)",
					"type": "object",
					"properties": {
						"stayArm": {
							"title": "Stay Arm (Home)",
							"type": "boolean",
							"default": true,
							"description": "Used when the home is occupied and residents are active."
						},
						"awayArm": {
							"title": "Away Arm",
							"type": "boolean",
							"default": true,
							"description": "Used when the home is unoccupied."
						},
						"nightArm": {
							"title": "Night Arm",
							"type": "boolean",
							"default": true,
							"description": "Used when the home is occupied and residents are sleeping."
						}
					}
				}
			}
		},
		"sensor": {
			"type": "array",
			"items": {
				"title": "Sensor Config",
				"type": "object",
				"properties": {
					"sensorType": {
						"title": "Sensor Type",
						"type": "string",
						"oneOf": [
							{ "title": "Contact Sensor", "enum": [ "contactSensor" ] },
							{ "title": "PIR", "enum": [ "pirSensor" ] }
						],
						"required": true
					},
					"location": {
						"title": "Sensor Location",
						"type": "string",
						"required": true,
						"placeholder": "e.g. Front Door"
					},
					"MQTTCode": {
						"title": "Sensor MQTT Code",
						"type": "string",
						"required": true,
						"placeholder": "e.g. 12345C"
					},
					"enabled": {
						"title": "Enable Sensor",
						"type": "boolean",
						"default": true,
						"description": "Globally enable/disable this sensor"
					},
					"allowStay": {
						"title": "Allow Sensor for Stay Arm (Home)?",
						"type": "boolean",
						"default": true,
						"description": "Usually ONLY entry-point sensors (e.g. doors and windows)"
					},
					"allowAway": {
						"title": "Allow Sensor for Away Arm?",
						"type": "boolean",
						"default": true,
						"description": "Usually ALL sensors"
					},
					"allowNight": {
						"title": "Allow Sensor for Night Arm?",
						"type": "boolean",
						"default": true,
						"description": "Usually ALL entry-point sensors and SOME internal sensors"
					}
				}
			}
		},
		"keyfob": {
			"title": "Do you have a Keyfob?",
			"type": "boolean",
			"default": false
		},
		"keyfobs": {
			"type": "array",
			"items": {
				"title": "Keyfob Config",
				"type": "object",
				"properties": {
				    "enabled": {
						"title": "Enable Keyfob?",
						"type": "boolean",
						"default": false,
						"description": "Enable or disable this keyfob"
					},
					"name": {
						"title": "Keyfob Name",
						"type": "string",
						"required": false,
						"description": "Friendly name of your keyfob",
						"placeholder": "e.g. Dad Keyfob"
					},
					"buttons": {
						"type": "array",
						"items": {
							"title": "Button",
							"type": "object",
							"properties": {
							    "enabled": {
                                    "title": "Enable Button?",
    							    "type": "boolean",
    							    "default": false,
    							    "description": "Enable or disable this button"
                                },
							    "alarmState": {
									"title": "Button Alarm State",
									"type": "integer",
									"oneOf": [
										{ "title": "Stay Arm (Home)", "enum": [ 0 ] },
										{ "title": "Away Arm", "enum": [ 1 ] },
										{ "title": "Night Arm", "enum": [ 2 ] },
										{ "title": "Disarm", "enum": [ 3 ] },
										{ "title": "SOS / Triggered", "enum": [ 4 ] }
									],
									"description": "Alarm state sent when button pressed (ensure state is enabled)"
							    },
								"MQTTCode": {
									"title": "Button MQTT Code",
									"type": "string",
									"placeholder": "e.g. 98765A"
								},
								"rfkeyTopic": {
									"title": "RFKey Topic",
									"type": "string",
									"description": "RFKey topic published to notify siren of a state change (required to set/trigger siren from HomeKit)",
									"required": false,
									"placeholder": "e.g. cmnd/rfbridge/rfkey1"
								}
							}
						}
					}
				}
			}
		},
		"siren": {
			"title": "Siren Settings",
			"type": "object",
			"properties": {
				"enabled": {
					"title": "Enable Siren?",
					"type": "boolean",
					"default": false,
					"description": "Enable or disable the siren (must have a keyfob setup)"
				}
			}
		}
	},
	"layout": [
		{
			"type": "fieldset",
			"items": [
				"name"
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "MQTT Config",
			"items": [
				{
					"type": "flex",
					"flex-flow": "row wrap",
					"items": [
						{
							"type": "flex",
							"items": [
								"mqttConfig.url"
							]
						}
					]
				},
				{
					"type": "flex",
					"flex-flow": "row wrap",
					"items": [
						{
							"type": "flex",
							"flex-flow": "column",
							"items": [
								"mqttConfig.username"
							]
						},
						{
							"type": "flex",
							"flex-flow": "column",
							"items": [
								"mqttConfig.password"
							]
						}
					]
				}
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "MQTT Alarm Topics",
			"items": [
				"alarmTopics.messageTopic",
				"alarmTopics.setTargetStateTopic",
				"alarmTopics.getCurrentStateTopic"
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "Enabled Alarm States in Home",
			"items": [
				"alarmSettings.targetStates",
				"alarmSettings.targetStates.stayArm",
				"alarmSettings.targetStates.awayArm",
				"alarmSettings.targetStates.nightArm"
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "Sensors",
			"items": [
				{
					"type": "array",
					"key": "sensor",
					"nodescription": true,
					"notitle": true,
					"minItems": 1,
					"items": [
						{
							"type": "fieldset",
							"expandable": true,
							"expanded": false,
							"title": "Sensor",
							"items": [
								"sensor[].sensorType",
								"sensor[].location",
								"sensor[].MQTTCode",
								"sensor[].enabled",
								"sensor[].allowStay",
								"sensor[].allowAway",
								"sensor[].allowNight"
							]
						}
					]
				}
			]
		},
		{
			"type": "fieldset",
			"items": [
				"keyfob"
			]
		},
		{
			"type": "conditional",
			"condition": "model.keyfob",
			"notitle": true,
			"startEmpty": true,
			"items": [
			    {
        			"type": "fieldset",
        			"expandable": true,
        			"title": "Keyfob Config",
        			"items": [
        				{
        					"type": "array",
        					"nodescription": true,
        					"expandable": true,
        					"expanded": true,
        					"notitle": true,
        					"title": "Keyfob",
                            "maxItems": 4,
        					"items": [
        					    {
        					        "type": "fieldset",
        					        "nodescription": true,
        					        "expandable": true,
        					        "expanded": false,
        					        "title": "Keyfob",
        					        "items": [
        					            "keyfobs[].enabled",
                						"keyfobs[].name",
                        			    {
                							"type": "array",
                							"expandable": true,
                							"expanded": true,
                							"nodescription": true,
                							"notitle": true,
                							"title": "Button",
                							"minItems": 1,
                							"maxItems": 4,
                							"items": [
                        						{
                        							"type": "fieldset",
                        							"expandable": true,
                							        "expanded": false,
                        							"nodescription": true,
                        							"title": "Button",
                        							"items": [
                        							    "keyfobs[].buttons[].enabled",
                        							    "keyfobs[].buttons[].alarmState",
                                                        "keyfobs[].buttons[].MQTTCode",
                                                        "keyfobs[].buttons[].rfkeyTopic"
                        							]
                        						}
                							]
                						}
        					       ]
        					    }
        					]
        				}
        			]
        		}
			    ]
		},
		{
			"condition": "model.keyfob",
			"type": "conditional",
			"notitle": true,
			"items": [
				{
        			"type": "fieldset",
        			"expandable": true,
        			"title": "Siren",
        			"items": [
        				"siren.enabled"
        			]
        		}
			]
		},
		{
			"type": "fieldset",
			"items": [
				"debug"
			]
		}
	]
}